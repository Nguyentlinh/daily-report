<div class="header navbar">
  <div class="header-container">
    <ul class="nav-left">
      <li>
        <%= link_to "", id: "sidebar-toggle", class: "sidebar-toggle" do %>
          <i class="ti-menu"></i>
        <% end %>
      </li>
      <li class="search-box">
        <%= link_to "", class: "search-toggle no-pdd-right" do %>
          <i class="search-icon ti-search pdd-right-10"></i>
          <i class="search-icon-close ti-close pdd-right-10"></i>
        <% end %>
      </li>
      <li class="search-input home-search">
        <%= form_with url: "#" do |form| %>
          <%= form.text_field :search, class: "form-control inp-home-search",
            placeholder: t(".input_search") %>
          <%= form.button t(".search"), class: "btn cur-p btn-primary" %>
        <% end %>
      </li>
    </ul>
    <ul class="nav-right">
      <li>
        <%= link_to locale: "en" do %>
          <%= image_tag "en.jpg", size: Settings.language_size %>
        <% end %>
      </li>
      <li>
        <%= link_to locale: "vi" do %>
          <%= image_tag "vi.jpg", size: Settings.language_size %>
        <% end %>
      </li>
      <li class="notifications dropdown">
        <span class="counter bgc-red">3</span>
        <%= link_to "", class: "dropdown-toggle no-after",
          "data-toggle": "dropdown" do %>
          <i class="ti-bell"></i>
        <% end %>
        <ul class="dropdown-menu">
          <li class="pX-20 pY-15 bdB">
            <i class="ti-bell pR-10"></i>
            <span class="fsz-sm fw-600 c-grey-900">
              <%= t ".notifications" %>
            </span>
          </li>
          <li class="pX-20 pY-15 ta-c bdT">
            <span>
              <%= link_to "", class: "c-grey-600 cH-blue fsz-sm td-n" do %>
                <%= t ".view_all_noti" %>
                <i class="ti-angle-right fsz-xs mL-10"></i>
              <% end %>
            </span>
          </li>
        </ul>
      </li>
      <li class="dropdown">
        <%= link_to "", class: "dropdown-toggle no-after peers fxw-nw ai-c lh-1",
          "data-toggle": "dropdown" do %>
          <div class="peer mR-10">
            <%= image_tag "default_avatar.png", class: "w-2r bdrs-50p" %>
          </div>
          <div class="peer">
            <span class="fsz-sm c-grey-900">John Doe</span>
          </div>
        <% end %>
        <ul class="dropdown-menu fsz-sm dropdown-menu-user">
          <li>
            <%= link_to "", class: "d-b td-n pY-5 bgcH-grey-100 c-grey-700" do %>
              <i class="ti-user mR-10"></i>
              <span><%= t ".profile" %></span>
            <% end %>
          </li>
          <li>
            <%= link_to "", class: "d-b td-n pY-5 bgcH-grey-100 c-grey-700" do %>
              <i class="ti-lock mR-10"></i>
              <span><%= t ".change_password" %></span>
            <% end %>
          </li>
          <li role="separator" class="divider"></li>
          <li>
            <%= link_to "", class: "d-b td-n pY-5 bgcH-grey-100 c-grey-700" do %>
              <i class="ti-power-off mR-10"></i>
              <span><%= t ".logout" %></span>
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  </div>
</div>
