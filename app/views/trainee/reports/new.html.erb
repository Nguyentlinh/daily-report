<% provide :title, t(".create_report") %>
<% provide :icon, "icons/admin.png" %>
<div class="masonry-item col-md-12 masonry-sizer">
  <div class="bd bgc-white">
    <div class="peers fxw-nw@lg+ ai-s">
      <div class="peer peer-greed w-70p@lg+ w-100@lg- p-20">
        <div class="layers">
          <div class="layer w-100 mB-10">
            <h3 class="c-grey-900 mB-20">
              <%= t ".create_report" %>
            </h3>
            <div class="row mT-30">
              <div class="col-md-12">
                <%= form_with url: trainee_reports_path, model: @report,
                  local: true do |f| %>
                  <%= f.hidden_field :status %>
                  <div class="mT-30">
                    <%= render "shared/error_messages", object: f.object %>
                  </div>
                  <div class="mT-30 col-md-4">
                    <h6 class="c-red-500"><%= f.label :"#{t ".title"}" %></h6>
                    <%= f.text_field :title, class: "form-control" %>
                  </div>
                  <div class="mT-30 col-md-2">
                    <h6 class="c-red-500"><%= f.label :"#{t ".date"}" %></h6>
                    <%= f.date_field :date, class: "form-control" %>
                  </div>
                  <div class="mT-30">
                    <h6 class="c-red-500"><%= f.label :"#{t ".content"}" %></h6>
                    <%= f.cktext_area :content, class: "ckeditor" %>
                  </div>
                  <div class="form-group row mT-30">
                    <div class="col-sm-10">
                      <%= f.button t(".create"), class: "btn btn-primary",
                        data:{confirm: t(".confirm")} %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
