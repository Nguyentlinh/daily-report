<% provide :title, t(".add_account") %>
<% provide :icon, "icons/admin.png" %>
<div class="masonry-item col-md-12 masonry-sizer">
  <div class="bd bgc-white">
    <div class="peers fxw-nw@lg+ ai-s">
      <div class="peer peer-greed w-70p@lg+ w-100@lg- p-20">
        <div class="layers">
          <div class="layer w-100 mB-10">
            <h3 class="c-grey-900 mB-20">
              <%= t ".add_account" %>
            </h3>
            <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %> mT-30"><%= message %></div>
            <% end %>
            <div class="row mT-30">
              <div class="col-lg-12 col-md-offset-3">
                <%= form_with url: trainer_users_path, model: @user, scope: "user",
                  local: true do |f| %>
                  <div class="mT-30">
                    <%= render "shared/error_messages", object: f.object %>
                  </div>
                  <div class="mT-30">
                    <h6 class="c-red-500"><%= f.label :"#{t ".email"}" %></h6>
                    <%= f.email_field :email, class: "form-control" %>
                  </div>
                  <div class="mT-30">
                    <h6 class="c-red-500"><%= f.label :"#{t ".password"}" %></h6>
                    <%= f.password_field :password, class: "form-control" %>
                  </div>
                  <div class="mT-30">
                    <h6 class="c-red-500"><%= f.label :"#{t ".password_confirmation"}" %></h6>
                    <%= f.password_field :password_confirmation, class: "form-control" %>
                  </div>
                  <div class="mT-30">
                    <h6 class="c-red-500"><%= f.label :"#{t ".type"}" %></h6>
                    <%= f.select :type, @type, {},
                      class: "form-control col-md-3" %>
                  </div>
                  <div class="mT-30">
                    <h6 class="c-red-500"><%= f.label :"#{t ".team"}" %></h6>
                    <% @teams.each do |team| %>
                      <%= f.label :"#{team}", class: "mR-40 form-check-label" do %>
                        <%= check_box_tag "teams[]", team %>
                        <%= team.titleize %>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="form-group row mT-30">
                    <div class="col-sm-10">
                      <%= f.button t(".add"), class: "btn btn-primary",
                        data: { confirm: t(".confirm") } %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
